<style>
    input, label{
        display: block;
    }
</style>

<div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= article.title %>" required>  

    <label for="description">Description</label>
    <textarea name="description" id="description" cols="30" rows="5" required><%= article.description %></textarea>
   
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" cols="30" rows="10"><%= article.markdown %></textarea>
   
    <br>
    <button type="submit">Post</button>
    <a href="/">Cancel</a>
</div>


